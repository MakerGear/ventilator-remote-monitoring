    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <label>Belongs to organization:</label>
    <%= form.collection_select( :organization_id, Organization.all, :id, :name, {}, { class: "form-control" })  %>

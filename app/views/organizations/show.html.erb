<p id="notice"><%= notice %></p>

<h2>
  Organization: <%= @organization.name %>
</h2>

<h5>
  <%= @organization.description %>
</h5>

<section>
  <% if current_user.admin? %>
    <a href="<%= edit_organization_path %>">
      <button class="btn btn-info">
        <i class="fas fa-cog"></i>
        Organization Settings
      </button>
    </a>
  <% end %>
</section>

<section>
  <h3>Clusters in this organization</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @organization.clusters.each do |cluster| %>
        <tr>
          <td>
            <%= link_to cluster.name, cluster %>
          </td>
          <td>
            <%= cluster.description %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if current_user.admin? || current_user.org_admin? && (params[:id].to_i == current_user.organization.id) %>
      <a href="/clusters/new?organization_id=<%= @organization.id %>">
        <button class="btn btn-info">
          + Add New Cluster
        </button>
      </a>
  <% end %>
</section>

<section>
  <h4>Users in this organization:</h4>

  <% @organization.users.each do |user| %>
    <div><%= link_to user.email, user %><div>
  <% end %>
</section>








